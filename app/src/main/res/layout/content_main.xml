<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ykoa.yacov.fastfoodie.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark">

            <Button
                android:id="@+id/all_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"/>

            <Button
                android:id="@+id/breakfast_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breakfast"/>

            <Button
                android:id="@+id/brunch_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brunch"/>

            <Button
                android:id="@+id/coffee_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee"/>

            <Button
                android:id="@+id/american_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="American"/>

            <Button
                android:id="@+id/brazilian_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brazilian"/>

            <Button
                android:id="@+id/chinese_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chinese"/>

            <Button
                android:id="@+id/french_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="French"/>

            <Button
                android:id="@+id/greek_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Greek"/>

            <Button
                android:id="@+id/indian_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indian"/>

            <Button
                android:id="@+id/italian_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Italian"/>

            <Button
                android:id="@+id/japanese_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Japanese"/>

            <Button
                android:id="@+id/korean_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Korean"/>

            <Button
                android:id="@+id/mexican_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mexican"/>

            <Button
                android:id="@+id/middle_eastern_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Middle Eastern"/>

            <Button
                android:id="@+id/russian_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Russian"/>

            <Button
                android:id="@+id/spanish_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spanish"/>

            <Button
                android:id="@+id/thai_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thai"/>

        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/distance"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"/>

        <ImageButton
            android:id="@+id/cost"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"/>

        <ImageButton
            android:id="@+id/rating"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"/>

        <!--<ImageButton-->
            <!--android:id="@+id/cuisine"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/colorPrimary" />-->

        <!--<View-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/colorAccent"/>-->

        <ImageButton
            android:id="@+id/favorite"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

    </LinearLayout>

</LinearLayout>
